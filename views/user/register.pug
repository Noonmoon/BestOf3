extends ../layout

block content
  link(rel="stylesheet", href="/stylesheets/user/login-register.css")
  
  body
    div
      h1#title REGISTER
      form(action="/user/register" method="POST")
        label.alien(for="email") Email:
          input(type="email", name="email", placeholder="")
        br
        label.alien(for="password") Password:
          input(type="password", name="password", placeholder="")
        br
        button.btn.btn-primary(type="submit") Submit
