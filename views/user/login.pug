extends ../layout

block content
  link(rel="stylesheet", href="/stylesheets/user/login-register.css")

  body
    include ../nav.pug

    - if (loginDidntWork) {
    div.loginErrorCont
      div.loginErrorMsg
       h2.lem Login Unsuccessful
    - }

    div.contan
      h1#title LOGIN
      form(action="/login" method="POST")
        label(for="email") Email:
          input(type="email", name="email")
        br
        label(for="password") Password:
          input(type="password", name="password")
        br
        button.submit(type="submit") Submit
