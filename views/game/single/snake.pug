extends ../../layout

block content
  link(rel="stylesheet", href="/stylesheets/single/snake.css")
  link(rel="stylesheet", href="/stylesheets/games.css")
  script(src="/javascripts/single/snake/snake.js")
  script(language="javascript" type="text/javascript" src="../../../../vendors/p5.dom.js")
  script(language="javascript" type="text/javascript" src="../../../../vendors/p5.sound.js")

  body
    include ../../nav.pug

    div#myContainer
    div.controlsCont
      h3 Controls
        h5 Keys: UP, DOWN, LEFT, RIGHT
        h5 Goal: Avoid any collisions and eat the fruits to increase your score as much as you can!

    div.contain
      h1.title More Singleplayer Games
      div.row
        div.col
          div.pong
            a.link(href='/game/single/pong')
              img.static(src="/images/pong_static.png")
              img.gif(src="/images/pong.gif")
            h2.gameName Pong
