extends ../../layout

block content
  include ../../nav.pug
  link(href="https://fonts.googleapis.com/css?family=Fira+Sans" rel="stylesheet")
  link(rel="stylesheet", href="/stylesheets/online-multi/tron.css")

  body
    script.
      if("#{user_id}") { user_id="#{user_id}" } else {user_id='guest'}
    div#snakeContainer
    div#countContainer
      h2.count User count:
        span#counter
    div.controlsCont  
      h3 Controls
        h5 Player 1: W,A,S,D
        h5 Player 2: UP,LEFT,DOWN,RIGHT
        h5 Goal: Outsurvive or kill your opponent

    div.container
      h1.title More Online Games
      div.snake
        a.link(href='/game/multi/online/snake')
          img.static(src="/images/snake_static.png")
          img.gif(src="/images/snake.gif")
        h2.gameName Snake

    script(src="/javascripts/online-multi/tron/tron.js")
    script(language="javascript" type="text/javascript" src="../../../../vendors/p5.sound.js")
    script(language="javascript" type="text/javascript" src="../../../../vendors/p5.play.js")
    script(language="javascript" type="text/javascript" src="../../../../vendors/p5.dom.js")
